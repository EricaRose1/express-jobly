{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/jobSearch.schema.json",
    "type": "object",
    "properties": {
      "companyHandle": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "minSalary": {
        "type": "integer",
        "minimum": 0
      },
      "hasEquity": {
        "type": "string",
        "pattern": "0|(0?\\.[0-9]+)"
    }
    },
    "additionalProperties": false,
    "required": []
}
  